package com.keerthi;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
      Scanner in=new Scanner(System.in);
        System.out.println("enter a number: ");
      int num=in.nextInt();
      int sum=0;
     for(int i=1;i<num;i++){
         sum+=i;
         if(sum==num){
             System.out.println(sum+" is a perfect number.");
         }
     }
    }
}
