package com.keerthi;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner in=new Scanner(System.in);
        System.out.println("enter first number: ");
        int a=in.nextInt();
        System.out.println("enter second number: ");
        int b=in.nextInt();
        System.out.println("enter third number: ");
        int c=in.nextInt();
        if(a>=b&&a>=c){
            System.out.println("\n"+a+" is a largest number");
        }
        else if(b>=a&&b>=c){
            System.out.println("\n"+b+" is a largest number");
        }
        else
            System.out.println("\n"+c+" is a largest number");
    }
}
